<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="5dp">
    <ImageView
        android:id="@+id/but_back2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/but_back"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ScrollViewCount,UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFAAAF"
                android:gravity="center"
                android:text="@string/jisuanqi"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/putout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:lines="3"
                android:text="0"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:rowCount="5">

                <Button
                    android:id="@+id/aa"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="CE" />
                <Button
                    android:id="@+id/ab"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="รท" />
                <Button
                    android:id="@+id/ac"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="X"
                    tools:ignore="DuplicateIds" />
                <Button
                    android:id="@+id/ad"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="C" />
                <Button
                    android:id="@+id/ba"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="7" />
                <Button
                    android:id="@+id/bb"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="8" />
                <Button
                    android:id="@+id/bc"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="9" />
                <Button
                    android:id="@+id/bd"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="+" />
                <Button
                    android:id="@+id/ca"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="4" />
                <Button
                    android:id="@+id/cb"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="5" />
                <Button
                    android:id="@+id/cc"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="6" />
                <Button
                    android:id="@+id/cd"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="-" />
                <Button
                    android:id="@+id/da"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="1" />
                <Button
                    android:id="@+id/db"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="2" />
                <Button
                    android:id="@+id/dc"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="3" />
                <ImageButton
                    android:id="@+id/dd"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:src="@drawable/dd"
                    android:scaleType="fitXY"/>
                <Button
                    android:id="@+id/ea"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="1/X" />

                <Button
                    android:id="@+id/eb"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="0" />
                <Button
                    android:id="@+id/ec"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="." />
                <Button
                    android:id="@+id/ed"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="=" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>